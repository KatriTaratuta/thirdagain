#!/usr/bin/env groovy

pipeline {
    agent any
    stages {
        stage('Informing') {
            steps {
                echo '--- Environment info ---'
                sh 'python3 --version'
                sh 'python3 -m pip --version'
            }
        }
        stage('Getting repo') {
            steps {
                echo 'clone the repo'
                sh 'rm -fr MLOps_task3'
                sh 'rm -fr requirements.txt'
                sh 'git clone https://github.com/KatriTaratuta/MLOps_task3.git'
            }
        }
        stage('Build') {
            steps {
                echo 'stage 2 here'
                sh 'python3 -m pip freeze > ./3mlops/requirements.txt'
                sh 'python3 -m pip install -r ./3mlops/requirements.txt'
                sh 'chmod u+x ./MLOps_task3/pipeline.sh'
                sh './MLOps_task3/pipeline.sh'
            }
        }
    }
}
